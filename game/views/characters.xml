<odoo>
  <data>
    <!-- explicit list view definition -->
 <record model="ir.ui.view" id="game.character_list">
      <field name="name">game character list</field>
      <field name="model">game.character</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="level"/>
            <field name="exp"/>
            <field name="stats"/>
            <field name="objects"/>
            <field name="picture" widget="image"/>
        </tree>
      </field>
    </record>



    <record model="ir.ui.view" id="game.character_form">
      <field name="name">game character form</field>
      <field name="model">game.character</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="exp"/>
                    <field name="stats"/>
                    <field name="objects"/>
                    <field name="picture" widget="image"/>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="game.characters_action_window">
      <field name="name">Characters</field>
      <field name="res_model">game.characters</field>
      <field name="view_mode">tree,form</field>
    </record>


